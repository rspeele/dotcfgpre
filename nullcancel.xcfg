alias +mleft [
 if +mright [
  -mright
  +wasright
 ]
 +moveleft
]
alias -mleft [
 if +wasright +mright
 -wasleft
 -moveleft
]

alias +mright [
 if +mleft [
  -mleft
  +wasleft
 ]
 +moveright
]
alias -mright [
 if +wasleft +mleft
 -wasright
 -moveright
]

bind a +mleft
bind f +mright