alias +mleft [
 if +mright then [
  -mright
  +wasright
 ]
 +moveleft
]
alias -mleft [
 if +wasright then +mright
 -wasleft
 -moveleft
]

alias +mright [
 if +mleft then [
  -mleft
  +wasleft
 ]
 +moveright
]
alias -mright [
 if +wasleft then +mleft
 -wasright
 -moveright
]

bind a +mleft
bind f +mright